//BABİL METODU
//Babil Metodu ile karekök alma yöntemiymiş
//Karekök almanın mantığını yeni öğreniyorum

#include <stdio.h>

void karekokal(double x) {
	double a,n; 
	n=(x+1)/2; 
	for (a=1; a<=10000; a++){
		n=((x/n)+n)/2; 
	}	
	printf("sonuc : %lf", x);
}
		
int	main(){
	double x,kok;
  printf("Karekokunu almak istediginiz sayi= ");
  scanf("%lf",&x);
	karekokal(x);

  return 0;
}
