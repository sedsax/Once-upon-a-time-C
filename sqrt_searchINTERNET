#include<stdio.h>

int main()
{
double sayi,a=32768,m=16384; //a=2^15, m=2^14
int k;
printf("sayi giriniz\n");
scanf("%lf",&sayi);

for(k=1;k<37;++k){
  if(sayi>a*a){
  printf("%2d. deneme %.7f + %.7f\n",k,a,m);
  a+=m;
  }
  else{
  printf("%2d. deneme %.7f - %.7f\n",k,a,m);
  a-=m;
  }
  m/=2;
}
printf("\nsqrt = %.1f\n",a);
return 0;
}
/*
Bu kodu karekök alma algoritmasını araştırırken buldum
İ-NA-NIL-MAAZZZ!!!
