#include <stdio.h>

int main(void) {
  int i,sayi1, sayi2;
  printf("Lutfen iki tane sayi giriniz: \n");
  scanf("%d%d",&sayi1, &sayi2);
  printf("Toplama islemi i√ßin 1' i, carpma icin 2' yi, cikarma icin 3' u, bolme icin 4' u yaziniz: \n");
  scanf("%d",&i);
  switch(i){
    case 1:
      printf("Sonuc= %d",sayi1+sayi2);
      break;
    case 2:
      printf("Sonuc= %d",sayi1*sayi2);
      break;
    case 3:
      printf("Sonuc= %d",sayi1/sayi2);
      break;
    case 4:
      printf("Sonuc= %d",sayi1-sayi2);
      break;
  }  

  return 0;
} 
